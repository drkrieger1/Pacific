@* ---------------------------------------- Services Carousel----------------------------------------- *@
<div class="parallax-carousel">
    <div class="row">
      <div class="col-sm-12 col-md-12 col-lg-6 parallax-carousel-row">
            <div id="carousel-services" class="carousel slide" data-ride="carousel">
               <ol class="carousel-indicators">
                   <li data-target="#carousel-services" data-slide-to="0" class="active"></li>
                   <li data-target="#carousel-services" data-slide-to="1" class="active"></li>
                   <li data-target="#carousel-services" data-slide-to="2" class="active"></li>
                   <li data-target="#carousel-services" data-slide-to="3" class="active"></li>
               </ol>
               <div class="carousel-inner" role="listbox">
                   <div class="carousel-item active">
                       <img class="d-block w-100" src="~/img/tile-900x300.jpg" alt="First Slide"/>
                       <div class="carousel-caption">
                           <h3 style="background-color: rgba(42, 45, 52, 0.4);">Custom Tile Work</h3>                          
                       </div>
                   </div>
                   <div class="carousel-item">
                       <img class="d-block w-100" src="~/img/counter-900x300.jpg" alt="Second Slide" />
                       <div class="carousel-caption">
                           <h3 style="background-color: rgba(42, 45, 52, 0.4);">Stone</h3>                        
                       </div>
                   </div>
                   <div class="carousel-item">
                       <img class="d-block w-100" src="~/img/fire-900x300.jpg" alt="Third Slide" />
                       <div class="carousel-caption">
                           <h3 style="background-color: rgba(42, 45, 52, 0.4);">Custom Interiors</h3>                  
                       </div>
                   </div>
                   <div class="carousel-item">
                       <img class="d-block w-100" src="~/img/rest-900x300.jpg" alt="Fourth Slide" />
                       <div class="carousel-caption">
                           <h3 style="background-color: rgba(42, 45, 52, 0.4);">Bath</h3>
                       </div>
                   </div>
               </div>
                <a class="carousel-control-prev" href="#carousel-services" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carousel-services" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
          </div>
       </div>
</div>

<div class="parallax-section">
   <div class="container" style="color:white; text-align:center; margin:auto; padding-top:10px; padding-bottom: 20px;">
      <h1 style="margin:auto; font-size:2em;">206-434-2713</h1>
       <h1 style="margin:auto; font-size:1em;">operations@pqconstruction.us</h1>
   </div>
</div>


@* ---------------------------------------------- Contact All To Action Form Group ------------------------------------------- *@
<div class="parallax-contact">
    <div class="container parallax-section-content">
        <div class="row form-row">
            <div class="col-sm-12 col-md-6 col-lg-6 contact-form-col">
                <form class="contact-form" asp-controller="Home" asp-action="Connect" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <h2>Connect With Us</h2>
                    <div class="form-group">
                        <label asp-for="Name" >Name:</label>
                        <input asp-for="Name" type="text" class="form-control"  placeholder="exp:name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Phone" >Phone:</label>
                        <input asp-for="Phone" type="number" class="form-control" placeholder="exp:14155552671" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" >Email:</label>
                        <input asp-for="Email" type="email" class="form-control" placeholder="exp:bill@buissnes.com" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Comment">Message:</label>
                        <textarea asp-for="Comment" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="Comment" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>