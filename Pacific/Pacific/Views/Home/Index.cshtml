@* ---------------------------------------- Services Carousel----------------------------------------- *@
<div class="parallax-carousel">
    @*<div class="container parallax-section-content">*@
    <div class="row">
      <div class="col-sm-12 col-md-12 col-lg-6 parallax-carousel-row">
            <div id="carousel-services" class="carousel slide" data-ride="carousel">
               <ol class="carousel-indicators">
                   <li data-target="#carousel-services" data-slide-to="0" class="active"></li>
                   <li data-target="#carousel-services" data-slide-to="1" class="active"></li>
                   <li data-target="#carousel-services" data-slide-to="2" class="active"></li>
                   <li data-target="#carousel-services" data-slide-to="3" class="active"></li>
               </ol>
               <div class="carousel-inner" role="listbox">
                   <div class="carousel-item active">
                       <img class="d-block w-100" src="~/img/tile-900x300.jpg" alt="First Slide"/>
                       <div class="carousel-caption">
                           <h3>First Slide Lable</h3>
                           <p>Going forward, our holistic enterprise will deliver value to stand-ups.</p>
                       </div>
                   </div>
                   <div class="carousel-item">
                       <img class="d-block w-100" src="~/img/counter-900x300.jpg" alt="Second Slide" />
                       <div class="carousel-caption">
                           <h3>Second Slide Lable</h3>
                           <p>We thrive because of our seamless vertical and world-class brand culture.</p>
                       </div>
                   </div>
                   <div class="carousel-item">
                       <img class="d-block w-100" src="~/img/fire-900x300.jpg" alt="Third Slide" />
                       <div class="carousel-caption">
                           <h3>Third Slide Lable</h3>
                           <p>Efficiencies will come from proactively aligning our low hanging fruit.</p>
                       </div>
                   </div>
                   <div class="carousel-item">
                       <img class="d-block w-100" src="~/img/rest-900x300.jpg" alt="Fourth Slide" />
                       <div class="carousel-caption">
                           <h3>Fourth Slide Lable</h3>
                           <p>You need to globally facilitate your standard setters to increase your emerging market velocity.</p>
                       </div>
                   </div>
               </div>
                <a class="carousel-control-prev" href="#carousel-services" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carousel-services" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
          </div>
       </div>
</div>
@* ---------------------------------------------- Contact All To Action Form Group ------------------------------------------- *@

<div class="parallax-contact">
    @*<div class="container parallax-section-content">*@
        <div class="row">
            <div class="col-sm-12 col-md-12 col-xl-4 contact-form-col">
                <form class="contact-form">
                    <h2>Connect With Us</h2>
                    <div class="form-group">
                        <lable for="contact-name">Name:</lable>
                        <input type="text" class="form-control" id="contact-name" placeholder="exp:name" />
                    </div>
                    <div class="form-group">
                        <lable for="contact-phone">Phone:</lable>
                        <input type="number" class="form-control" id="contact-phone" placeholder="exp:14155552671" />
                    </div>
                    <div class="form-group">
                        <lable for="contact-email">Email:</lable>
                        <input type="email" class="form-control" id="contact-phone" placeholder="exp:bill@buissnes.com" />
                    </div>
                    <div class="form-group">
                        <lable for="contact-message">Message:</lable>
                        <textarea class="form-control" id="contact-message" rows="5"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary" >Submit</button>
                </form>
            </div>
        </div>
    @*</div>*@
</div>