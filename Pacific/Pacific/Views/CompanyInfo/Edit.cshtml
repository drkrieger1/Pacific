@model Pacific.Models.CompanyInfo

@{ 
    Layout = "_Layout";
}

<div class="container">
    <h2>Lead Edit</h2>

    <div class="row">
        <div class="col-sl-12 col-md-12 col-lg-12">
            <form asp-action="Edit">

                @*model only validation*@
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input asp-for="ID" class="form-control" type="hidden" />

                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Mission" for="contact-message">Message:</label>
                    <textarea asp-for="Mission" class="form-control" id="contact-message" rows="5"></textarea>
                    <span asp-validation-for="Mission" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AdressLine1" class="control-label"></label>
                    <input asp-for="AdressLine1" class="form-control" />
                    <span asp-validation-for="AdressLine1" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AdressLine2" class="control-label"></label>
                    <input asp-for="AdressLine2" class="form-control" />
                    <span asp-validation-for="AdressLine2" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="State" class="control-label"></label>
                    <input asp-for="State" class="form-control" />
                    <span asp-validation-for="State" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ZipCode" class="control-label"></label>
                    <input asp-for="ZipCode" class="form-control"  />
                    <span asp-validation-for="ZipCode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Phone" class="control-label"></label>
                    <input asp-for="Phone" class="form-control" type="number" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>